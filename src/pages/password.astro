---
import Head from '@components/infra/Head.astro';

import PoppyStem from '@assets/images/big-poppy-stem.png';
import FlowersTop from '@assets/images/flowers-login-top.png';
import FlowersBottom from '@assets/images/flowers-login-bottom.png';

import { Image } from 'astro:assets';
import { COOKIE_ID } from 'src/auth';

export const prerender = false;

const title = 'Natalie and Chris - Login!';

const redirect = Astro.request.headers.get('x-redirect-to') ?? '/';

Astro.cookies.delete(COOKIE_ID);
---

<script>
    const form: HTMLFormElement | null = document.querySelector('form#password');
    form?.addEventListener('submit', async (e: SubmitEvent) => {
        e.preventDefault();
        const response = await fetch(`/api/auth?redirect=${form.getAttribute('data-redirect')}`, {
            method: 'POST', 
            body: new FormData(form),
            redirect: "follow"
        })
        if (!response.ok) {
            console.error('wrong password');
        } else {
            if (response.redirected) {
                window.location.href = response.url;
            }
        }
    })
</script>

<!doctype html>
<html lang="en">
	<head>
		<Head {title} />
	</head>
	<body>
		<main>
            <Image class="flowers fade-in" style="--animation-delay: 0.15s; --anmation-duration: 200ms; --animation-timing-function: ease-in;" src={FlowersTop} alt="flowers!"/>
            <div class="content">
                <div class="text-container">
                    <h1>Natalie & Chris</h1>
                    <p>are getting married!</p>
                </div>
                <form id="password" data-redirect={encodeURI(redirect)}>
                    <input name="password" type="password" placeholder="Enter password"/>
                    <Image class="form-image" src={PoppyStem} alt="small flower" />
                </form>
            </div>
            <Image class="flowers fade-in" style="--animation-delay: 0.15s; --anmation-duration: 200ms; --animation-timing-function: ease-in;" src={FlowersBottom} alt="flowers!"/>
        </main>
	</body>
</html>

<style lang="scss">
    @use '../styles/media.scss' as Media;
    main {
        width: 100dvw;
        height: 100dvh;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: var(--space-base);

        padding: var(--space-small);

        background-color: var(--color-offwhite, beige);

        h1, p {
            color: var(--color-green);
        }

        .flowers {
            height: auto;
            width: 75%;
            display: flex;

            @include Media.at('medium') {
                max-width: 300px;
            }
        }
        img {
            height: auto;
            max-width: 100vw;
        }

        .content {
            --max-width: calc(100dvw - (2 * var(--space-line, 2rem)));
            @include Media.at('medium') {
                --max-width: 300px;
            }
            
            overflow: hidden;
            max-width: 2px;
            max-height: 0px;
            opacity: 0;
            animation: animate-content 2s linear 500ms 1 forwards normal;

            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            gap: var(--space-small);

            padding: 0 0;

            border-top: var(--color-green) 1px solid;
            border-bottom: var(--color-green) 1px solid;

            .text-container {
                margin-top: var(--space-small);

                display: flex;
                flex-direction: column;
                gap: 0;
            }

            form {
                margin-bottom: var(--space-small);
                position: relative;;
                width: 100%;
                
                font-size: 1.5rem;
                
                input[type="password"] {
                    display: inline-block;
                    width: 100%;
                    height: fit-content;

                    font-size: inherit;

                    padding: .75rem 0.75rem 0.75rem 2.5rem;

                    border: none;
                    border-radius: 2px;

                    color: var(--color-green);
                    background-color: color-mix(in srgb, transparent 90%, var(--color-green) 10%);
                    
                    &::placeholder {
                        color: color-mix(in srgb, transparent 50%, var(--color-green) 75%);
                    }
                }

                .form-image {
                    position: absolute;
                    top: 50%;
                    left: 0.75rem;
                    translate: 0 -50%;

                    height: 1em;
                    width: auto;
                }
            }

        }

        @keyframes animate-content {
            from {
                opacity: 0;
                max-width: 2px;
                max-height: 0px;
            }
            30% {
                opacity: 0.6;
                max-width: 100%;
                max-height: 0;
            }
            to {
                opacity: 1;
                max-width: 100%;
                max-height: 100%;
            }
        }
    }
</style>