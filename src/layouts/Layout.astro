---
import Analytics from '@vercel/analytics/astro'

import Head from '@components/infra/Head.astro';
import TheHeader from '@components/TheHeader.svelte';

interface Props {
	title?: string;
	page?: 'home' | 'default';
}

const { title, page = 'default' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Head {title} />
		<Analytics />
	</head>
	<body>
		<TheHeader {page} client:load />
		<slot />
	</body>
</html>

<style is:global lang="scss">
	@use '@styles/media.scss' as Media;
	
	main {
		scroll-behavior: smooth;

        display: flex;
        flex-direction: column;
        gap: var(--space-line);
		
		margin: auto;
        padding: var(--space-large) var(--space-line);
        
        @include Media.at('medium') {
            gap: var(--space-small);
        }

		section {
            margin: auto;
            
            width: 100%;
            max-width: 400px;
            @include Media.at('medium') {
                max-width: 720px;
            }
            @include Media.at('large') {
                max-width: 1000px;
            }
            @include Media.at('extra-large') {
                max-width: 1200px;
            }
        }
	}
</style>